.container {
  padding: 60rpx 0px 60rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.warp {
  width: 85%;
  border: 0.5rpx solid #e6e6e6;
  box-shadow: 0px 0px 1px #e6e6e6;
  margin-top: 35px;
  padding: 0px 10px;
  font-size: 14px;
  color: #9b9b9b;
  border-radius: 5px;
}

.module {
  padding: 16px 0px 14px;
  border-bottom: 1px solid #e6e6e6;
}

.warp .share {
  padding: 12px 0px 3px;
}

.module image.arrow {
  width: 12px;
  height: 14px;
  margin-top: 3px;
}

.logo image {
  width: 20px;
  height: 20px;
  vertical-align: middle;
  margin-right: 10px;
  float: left;
}

.logo text {
  font-size: 14px;
}

.logo button {
  outline: none;
  border: none;
  font-size: 14px;
  display: inline-block;
  color: #9b9b9b;
  padding: 0px 0px;
  background: #fff;
  line-height: 30px;
}

.logo button::after {
  border: none;
}

.warp .module:last-child {
  border: none;
}

.save {
  width: 200rpx;
  height: 60rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  background: #666;
  line-height: 60rpx;
  text-align: center;
  display: inline-block;
  font-size: 14px;
  color: #fff;
}

.baocun {
  text-align: center;
  font-size: 14px;
}

.canvas-box {
  width: 90%;
  margin: 0 auto;
  position: fixed;
  top: 80rpx;
  left: 40rpx;
  background: #fff;
  z-index: 9999;
}
.mask{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 99;
  background: rgba(128,128,128,.6);
}
